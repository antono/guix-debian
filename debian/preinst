#!/bin/sh
# preinst script for guix
#
# see: dh_installdeb(1)

set -e

GUIX_GROUP='guix'
GUIX_USER='guix-builder'

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install)
        if ! getent group $GUIX_GROUP > /dev/null; then
            groupadd --system $GUIX_GROUP
        fi

        mkdir -p /nix/store
        chmod 1775 /nix/store
        chown -R root.$GUIX_GROUP /nix/

        for i in $(seq 1 5); do
            CURRENT_GUIX_USER=$GUIX_USER-$i
            if ! getent passwd $CURRENT_GUIX_USER > /dev/null; then
                useradd --system -M --comment "Guix Builder $i" \
                    --gid $GUIX_GROUP --shell /bin/false $CURRENT_GUIX_USER

            fi
            addgroup $CURRENT_GUIX_USER $GUIX_GROUP
        done
    ;;
    
    upgrade)
        echo "Upgrading Guix..."
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        for i in $(seq 1 5); do
            CURRENT_GUIX_USER=$GUIX_USER-$i
            if getent passwd $CURRENT_GUIX_USER > /dev/null; then
                userdel $CURRENT_GUIX_USER
            fi
        done

        if getent group $GUIX_GROUP > /dev/null; then
            groupdel $GUIX_GROUP
        fi
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
